<UserControl x:Class="ProjectSweeper.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectSweeper.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Background="Orange" Height="50px">
        <Button Content="Line Style" Command="{Binding NavigateLineStyleCommand}"/>
        <Button Content="Line Pattern" Command="{Binding NavigateLinePatternCommand}" />
        <Button Content="Filled Region" Command="{Binding NavigateFilledRegionComamnd}" />
        <Button Content="Fill Pattern" Command="{Binding NavigateFillPatternCommand}" />
    </StackPanel>
</UserControl>
